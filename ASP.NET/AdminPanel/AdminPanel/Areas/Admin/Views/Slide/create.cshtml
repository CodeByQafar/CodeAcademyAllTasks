@using AdminPanel.Models
@using Test.Models
@model Slider


<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create category</h4>
                <form method="post" class="forms-sample" enctype="multipart/form-data">          
                    <div class="form-group">
                        <label for="exampleInputName1">Discount</label>
                        <input asp-for="UpTitle" type="text" class="form-control" placeholder="Discount">
                        <span asp-validation-for="UpTitle" class="text-danger"> </span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Title</label>
                        <input asp-for="Title" type="text" class="form-control" placeholder="Title">
                        <span asp-validation-for="Title" class="text-danger"> </span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Description</label>
                        <input asp-for="SupTitle" type="text" class="form-control" placeholder="Description">
                        <span asp-validation-for="SupTitle" class="text-danger"> </span>
                       </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Order</label>
                        <input asp-for="Order" type="number" class="form-control" placeholder="Order">
                        <span asp-validation-for="Order" class="text-danger"> </span>
                    </div>
                        <div class="form-group">
                            <label>Image upload</label>
                        <input asp-for="ImageFile"  class="form-control" placeholder="Photo">
                        <span asp-validation-for="ImageFile" style="color:red"></span>
                        </div>
                    
                        <button type="submit" class="btn btn-primary me-2">Submit</button>
                </form>
            </div>
        </div>
    </div>

</div>
@using AdminPanel.Models
@using Test.Models
@model Slider


<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create category</h4>
                <form method="post" class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Discount</label>
                        <input asp-for="UpTitle" type="text" class="form-control" placeholder="Name">
                        <span asp-validation-for="UpTitle" class="text-danger"> </span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Title</label>
                        <input asp-for="Title" type="text" class="form-control" placeholder="Name">
                        <span asp-validation-for="Title" class="text-danger"> </span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Description</label>
                        <input asp-for="SupTitle" type="text" class="form-control" placeholder="Name">
                        <span asp-validation-for="SupTitle" class="text-danger"> </span>

                        <div class="form-group">
                            <label>Image upload</label>
                            <input type="file" name="img[]" class="file-upload-default">
                            <div class="input-group col-xs-12">
                                <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                                <span class="input-group-append">
                                    <button class="file-upload-browse btn btn-primary" type="button">Upload</button>
                                </span>
                            </div>
                        </div>
                    
                        <button type="submit" class="btn btn-primary me-2">Submit</button>
                </form>
            </div>
        </div>
    </div>

</div>
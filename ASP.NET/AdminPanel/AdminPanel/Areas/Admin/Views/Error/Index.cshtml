@model string
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Error Occurred</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .error-container {
            text-align: center;
            max-width: 600px;
            padding: 20px;
        }

        .error-title {
            font-size: 5rem;
            font-weight: 800;
            color: #4b49ac; /* Majestic Admin brand color */
            margin-bottom: 0;
        }

        .error-message {
            font-size: 1.25rem;
            color: #6c757d;
            margin-top: 10px;
            margin-bottom: 30px;
        }

        .btn-custom {
            background-color: #4b49ac;
            color: white;
            border-radius: 8px;
            padding: 10px 25px;
            text-decoration: none;
            transition: 0.3s;
        }

            .btn-custom:hover {
                background-color: #3f3e91;
                color: white;
            }
    </style>
</head>
<body>

    <div class="error-container">
        <h1 class="error-title">Damn!</h1>

        <div class="error-message">
            @(string.IsNullOrEmpty(Model) ? "Something went wrong. Please try again later." : Model)
        </div>

        <div class="d-flex justify-content-center gap-3">
            <a href="javascript:history.back()" class="btn btn-outline-secondary px-4">Go Back</a>
            <a href="/" class="btn btn-custom px-4">Home Page</a>
        </div>
    </div>

</body>
</html>
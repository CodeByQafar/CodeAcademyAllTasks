@using Simulasya3.Areas.Admin.ViewModels.Home
@model UpdateVM

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic form elements</h4>
            <p class="card-description">
                Update Team
            </p>
            <form method="post" enctype="multipart/form-data" class="forms-sample">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label for="exampleInputName1">FullName</label>
                    <input asp-for="FullName" type="text" class="form-control" id="exampleInputName1" placeholder="Name">
                    <span class="text-danger" asp-validation-for="FullName"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Position</label>
                    <input asp-for="Position" type="text" class="form-control" id="exampleInputEmail3" placeholder="Position">
                    <span class="text-danger" asp-validation-for="Position"></span>

                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Order</label>
                    <input asp-for="Order" type="number" class="form-control" id="exampleInputPassword4" placeholder="Password">
                    <span class="text-danger" asp-validation-for="Order"></span>

                </div>

                <div class="form-group">
                    <label>File upload</label>
                    <input asp-for="ImageFile" class="form-control">
                    <span class="text-danger" asp-validation-for="ImageFile"></span>

                </div>

                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <a asp-action="index" asp-controller="home" asp-area="admin" class="btn btn-primary">Go back</a>
            </form>
        </div>
    </div>
</div>
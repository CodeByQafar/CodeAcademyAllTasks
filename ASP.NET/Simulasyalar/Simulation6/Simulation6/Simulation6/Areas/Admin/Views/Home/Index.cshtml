@using Simulation6.Areas.Admin.ViewModels.Home
@using Simulation6.Models
@model HomeVM


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Project table</h4>
            <a class="btn-dark text-decoration-none p-3 my-3" asp-action="create" asp-controller="home">Create Project</a>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                Id
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Project Type
                            </th>
                            <th>
                                Optionas
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Project project in Model.Projects)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="~/assets/images/@project.ImageUrl" alt="image">
                                </td>
                                <td class="py-1">
                                    @project.Id
                                </td>

                                <td>
                                    @project.Title
                                </td>
                                <td>
                                    @project.ProjectType
                                </td>
                                <td>
                                    <a class="btn-primary text-decoration-none p-3 m-3" asp-action="update" asp-controller="home" asp-route-id="@project.Id">update</a>
                                    <a class="btn-warning text-decoration-none p-3 m-3" asp-action="detail" asp-controller="home" asp-route-id="@project.Id">detail</a>
                                    <a class="btn-danger text-decoration-none p-3 m-3" asp-action="delete" asp-controller="home" asp-route-id="@project.Id">delete</a>
                                </td>

                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
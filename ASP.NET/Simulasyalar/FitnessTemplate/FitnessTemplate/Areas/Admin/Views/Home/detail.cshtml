@using FitnessTemplate.Models
@using FitnessTemplate.ViewModels
@model Trainer

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">


            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                First name
                            </th>
                            <th>
                                Position
                            </th>
                            <th>
                                Description
                            </th>
                        
                        </tr>
                    </thead>
                    <tbody>
                     
                            <tr>
                                <td class="py-1">
                                    <img src="/images/@Model.ImageUrl" alt="image" />
                                </td>
                                <td>
                                @Model.FullName
                                </td>
                                <td>
                                @Model.Position
                                </td>
                                <td>
                                @Model.Description
                                </td>
                           
                            </tr>
                   


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
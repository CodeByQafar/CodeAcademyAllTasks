

@using FitnessTemplate.Models
@using FitnessTemplate.ViewModels.Home
@model HomeVM

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
     <a class="btn-primary p-3 m-3" asp-area="Admin" asp-controller="Home" asp-action="Create">Add Trainer</a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                First name
                            </th>
                            <th>
                                Position
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Options

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Trainer trainer in Model.Trainers)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="/images/@trainer.ImageUrl" alt="image" />
                                </td>
                                <td>
                                    @trainer.FullName
                                </td>
                                <td>
                                    @trainer.Position
                                </td>
                                <td>
                                    @trainer.Description
                                </td>
                                <td>
                                    <a class="btn-primary p-3" asp-area="Admin" asp-controller="Home" asp-action="Update" asp-route-id="@trainer.Id">Update</a>
                                    <a class="btn-warning p-3" asp-area="Admin" asp-controller="Home" asp-action="Delete" asp-route-id="@trainer.Id">Delete</a>
                                    <a class="btn-danger p-3" asp-area="Admin" asp-controller="Home" asp-action="Detail" asp-route-id="@trainer.Id">Detail</a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
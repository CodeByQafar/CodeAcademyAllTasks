@using FitnessTemplate.Models
@model Trainer

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic form elements</h4>
            <p class="card-description">
                Basic form elements
            </p>
            <form method="post" class="forms-sample" enctype='multipart/form-data'>
                <div class="form-group">
                    <label for="exampleInputName1">Full Name</label>
                    <input asp-for="FullName" type="text" class="form-control" id="exampleInputName1" placeholder="Name">
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Positon</label>
                    <input asp-for="Position" type="text" class="form-control" id="exampleInputName1" placeholder="Positon">
                    <span asp-validation-for="Position" class="text-danger"></span>

                </div>

                <div class="form-group">
                    <label for="exampleInputPassword4">Description</label>
                    <textarea asp-for="Description" type="text" class="form-control" id="exampleInputPassword4" placeholder="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>

                <div class="form-group">
                    <label>Image upload</label>
                    <input asp-for="ImageFile" class="form-control" placeholder="Photo">
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
        
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>
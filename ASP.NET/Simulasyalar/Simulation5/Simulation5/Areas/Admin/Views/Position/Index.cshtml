@using Simulation5.Areas.Admin.ViewModels.Position4
@using Simulation5.Models
@model HomeVM

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Position Tables</h4>
            <a class="btn-dark p-3 m-3 text-decoration-none" asp-action="create" asp-controller="chef" asp-area="admin">Add chef</a>
            <a class="btn-dark p-3 m-3 text-decoration-none" asp-action="create" asp-controller="Position" asp-area="admin">Add Positions</a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Position Name
                            </th>
                            <th>
                                Options
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Position positions in Model.positions)
                        {
                            <tr>
                                <td>
                                    @positions.Id
                                </td>

                                <td>
                                    @positions.Name
                                </td>




                                <td>
                                    <a class="btn-primary p-3 m-3 text-decoration-none" asp-action="update" asp-controller="position" asp-area="admin" asp-route-id="@positions.Id">update</a>
                                    <a class="btn-danger p-3 m-3 text-decoration-none" asp-action="delete" asp-controller="position" asp-area="admin" asp-route-id="@positions.Id">delete</a>
                                    @* <a class="btn-warning p-3 m-3 text-decoration-none" asp-action="detail" asp-controller="position" asp-area="admin" asp-route-id="@positions.Id">detail</a> *@
                                </td>

                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
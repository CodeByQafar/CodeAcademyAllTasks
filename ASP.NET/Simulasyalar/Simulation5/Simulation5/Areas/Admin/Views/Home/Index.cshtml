@using Simulation5.Areas.Admin.ViewModels.Homes
@using Simulation5.Models

@model HomeVM


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Chef Table</h4>
            <a class="btn-dark p-3 m-3 text-decoration-none" asp-action="create" asp-controller="chef" asp-area="admin">Add chef</a>
            <a class="btn-dark p-3 m-3 text-decoration-none" asp-action="index" asp-controller="Position" asp-area="admin">Positions</a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Image
                            </th>
                            <th>

                                FullName
                            </th>
                            <th>
                                Position
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Options
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Chef chefs in Model.chefs)
                        {
                            <tr>
                                <td>
                                    @chefs.Id
                                </td>
                                <td class="py-1">
                                    <img src="images/@chefs.ImageUrl" alt="image" />
                                </td>
                                <td>
                                @chefs.FullName
                                </td>
                                <td>
                                    @chefs.Position.Name
                                </td>
                                <td>
                                    @chefs.Description
                                </td>
                        

                              
                                <td>
                                    <a class="btn-primary p-3 m-3 text-decoration-none" asp-action="update" asp-controller="chef" asp-area="admin" asp-route-id="@chefs.Id">update</a>
                                    <a class="btn-danger p-3 m-3 text-decoration-none" asp-action="delete" asp-controller="chef" asp-area="admin" asp-route-id="@chefs.Id">delete</a>
                                    <a class="btn-warning p-3 m-3 text-decoration-none" asp-action="detail" asp-controller="chef" asp-area="admin" asp-route-id="@chefs.Id">detail</a>
                                </td>
                             
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>